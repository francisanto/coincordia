# Concordia DApp Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# FRONTEND CONFIGURATION (.env.local in root directory)
# =============================================================================

# Smart Contract Configuration
nNEXT_PUBLIC_CONTRACT_ADDRESS=0x31ff87832e0bc5eaee333d1db549829ba0376d45aa23a41e6b12bfe17c969595
NEXT_PUBLIC_NETWORK=opBNB Testnet
NEXT_PUBLIC_RPC_URL=https://opbnb-testnet-rpc.bnbchain.org

# Backend API Configuration
NEXT_PUBLIC_API_URL=${RAILWAY_SERVICE_BACKEND_URL}

# =============================================================================
# BACKEND CONFIGURATION (.env in backend directory)
# =============================================================================

# Server Configuration
PORT=3001
FRONTEND_URL=${RAILWAY_PUBLIC_URL}
NODE_ENV=development

# Smart Contract Configuration
CONTRACT_ADDRESS=0x31ff87832e0bc5eaee333d1db549829ba0376d45aa23a41e6b12bfe17c969595
RPC_URL=https://opbnb-testnet-rpc.bnbchain.org

# BNB Greenfield Configuration
GREENFIELD_ENDPOINT=https://gnfd-testnet-sp1.bnbchain.org
GREENFIELD_CHAIN_ID=5600
GREENFIELD_BUCKET=concordia-data
GREENFIELD_ACCOUNT_ADDRESS=your_greenfield_account_address_here
GREENFIELD_PRIVATE_KEY=your_greenfield_private_key_here

# =============================================================================
# DEPLOYMENT CONFIGURATION (for deploy.js)
# =============================================================================

# Network Configuration
NETWORK=opBNB Testnet
PRIVATE_KEY=your_deployment_private_key_here

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# For production deployment, use these values:
# NEXT_PUBLIC_CONTRACT_ADDRESS=your_mainnet_contract_address
# GREENFIELD_ENDPOINT=https://gnfd-mainnet-sp1.bnbchain.org
